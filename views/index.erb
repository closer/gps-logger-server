<!doctype html>
<html>
  <head>
    <title>GPS LOGGER</title>
    <style>
      @import url(http://fonts.googleapis.com/css?family=Wire+One);

      html, body {
        margin:0;
        padding:0;
        width:100%;
        height:100%;
        overflow:hidden;
      }
      body {
        position:relative;
      }
      #gMap {
        position:absolute;
        left:0px;
        top:0px;
        width:100%;
        height:100%;
        background:#ffcccc;
      }
      #over {
        position:absolute;
        left:0px;
        top:0px;
        width:100%;
        height:100%;
      }
      .floater {
        height:50%;
        margin-bottom:-300px;
      }
      .cover {
        position:relative;
        margin:0 auto;
        width:500px;
        height:500px;
        padding:50px;
        background:rgba(255,255,255,0.8);
      }
      h1 {
        font-family: 'Wire One', sans-serif;
        margin:0;
        padding:0;
        font-size:100px;
        text-align:center;
        border-bottom:dashed 1px #000;
      }
    </style>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/jquery.GoogleMaps.js"></script>
    <script type="text/javascript">
      $(function(){
        $('#gMap').GoogleMaps();
      });
    </script>
  </head>
  <body>
    <div id="gMap"></div>
    <div id="over">
      <div class="floater"></div>
      <div class="cover">
        <h1>GPS LOGGER</h1>
      </div>
    </div>
  </body>
</html>
